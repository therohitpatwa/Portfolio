---
import "@fontsource-variable/dm-sans";
import Container from "../components/Container.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { Icon } from "astro-icon/components";
---

<html lang="gl">
  <head>
    <script is:inline>
      if (localStorage.getItem("theme") === null) {
        document.documentElement.setAttribute("data-theme", "black");
        localStorage.setItem("theme", "black");
      } else {
        document.documentElement.setAttribute(
          "data-theme",
          localStorage.getItem("theme")
        );
      }
    </script>
    <script>
      import { themeChange } from "theme-change";
      themeChange();
    </script>
    <script is:inline>
      // Sync toggle checked state with current theme and persist on change
      document.addEventListener('DOMContentLoaded', function () {
        const toggle = document.querySelector('input[data-toggle-theme]');
        const currentTheme = document.documentElement.getAttribute('data-theme');
        if (toggle) {
          // checked = light (lofi), unchecked = dark (black)
          toggle.checked = currentTheme === 'lofi';
          toggle.addEventListener('change', function () {
            const updatedTheme = document.documentElement.getAttribute('data-theme');
            if (updatedTheme) {
              localStorage.setItem('theme', updatedTheme);
            }
          });
        }
      });
    </script>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <title>Rohit Patwa CV</title>
  </head>
  <body class="flex flex-col min-h-screen">
    <Header />
    <div
      class="flex items-center absolute top-4 right-4 md:top-6 md:right-6 lg:top-8 lg:right-8 xl:top-10 xl:right-10 z-10"
    >
      <Icon name="carbon:moon" class="w-4 h-4" />
      <input
        type="checkbox"
        data-toggle-theme="lofi,black"
        data-act-class="ACTIVECLASS"
        class="toggle toggle-sm mx-1 bg-secondary"
      />
      <Icon name="carbon:light" class="w-4 h-4" />
    </div>

    <div class="mx-auto max-w-3xl w-[95vw] flex flex-col mb-4">
      <div class="flex items-center bg-green-800 px-3 py-2 rounded-full mb-3 w-fit animate-pulse hover:scale-105 transition-all duration-300">
        <div class="w-3 h-3 bg-green-400 rounded-full mr-2 shadow-lg shadow-green-400/50 modern-pulse"></div>
        <span class="text-green-100 text-sm font-medium">Available for work</span>
      </div>
      <div class="divider w-full bg-secondary h-px"></div>
    </div>
    <main
      class="mx-auto flex-grow max-h-[90vh] md:max-h-[70vh] max-w-3xl overflow-y-scroll pt-4 pb-2 grid w-[95vw]"
    >
      <div class="container">
        <Container />
      </div>
    </main>
    <Footer class="flex justify-center items-center py-4" />
  </body>
</html>

<style is:global>
  body {
    font-family: "DM Sans Variable", sans-serif;
  }

  @media (min-width: 768px) {
    .container {
      display: flex;
      flex-wrap: wrap;
    }
  }

  @media only screen and (max-width: 480px) {
    * {
      font-size: 12px;
    }
  }

  .overflow-y-scroll::-webkit-scrollbar {
    width: 3px;
  }

  .overflow-y-scroll::-webkit-scrollbar-thumb {
    background-color: oklch(var(--s));
  }

  .overflow-y-scroll {
    scrollbar-width: 1px;
  }

  @media (max-width: 768px) {
    .container {
      flex-direction: column;
    }
  }

  @media (min-width: 768px) {
    .container {
      display: flex;
      flex-wrap: wrap;
    }
  }

  @keyframes modern-pulse {
    0%, 100% {
      transform: scale(1) translateY(0);
      opacity: 1;
    }
    50% {
      transform: scale(1.1) translateY(-1px);
      opacity: 0.8;
    }
  }

  .modern-pulse {
    animation: modern-pulse 2s ease-in-out infinite;
  }
</style>
