---
import "@fontsource-variable/dm-sans";
import Container from "../components/Container.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { Icon } from "astro-icon/components";
---

<html lang="gl">
  <head>
    <script is:inline>
      if (localStorage.getItem("theme") === null) {
        document.documentElement.setAttribute("data-theme", "black");
        localStorage.setItem("theme", "black");
      } else {
        document.documentElement.setAttribute(
          "data-theme",
          localStorage.getItem("theme")
        );
      }
    </script>
    <script>
      import { themeChange } from "theme-change";
      themeChange();
    </script>
    <script is:inline>
      // Sync toggle checked state with current theme and persist on change
      document.addEventListener('DOMContentLoaded', function () {
        const toggle = document.querySelector('input[data-toggle-theme]');
        const currentTheme = document.documentElement.getAttribute('data-theme');
        if (toggle) {
          // checked = light (lofi), unchecked = dark (black)
          toggle.checked = currentTheme === 'lofi';
          toggle.addEventListener('change', function () {
            const updatedTheme = document.documentElement.getAttribute('data-theme');
            if (updatedTheme) {
              localStorage.setItem('theme', updatedTheme);
            }
          });
        }
      });
    </script>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <title>Rohit Patwa CV</title>
  </head>
  <body class="flex flex-col min-h-screen">
    <Header />
    <div
      class="flex items-center absolute top-4 right-4 md:top-6 md:right-6 lg:top-8 lg:right-8 xl:top-10 xl:right-10 z-20"
    >
      <Icon name="carbon:moon" class="w-4 h-4" />
      <input
        type="checkbox"
        data-toggle-theme="lofi,black"
        data-act-class="ACTIVECLASS"
        class="toggle toggle-sm mx-1 bg-secondary"
      />
      <Icon name="carbon:light" class="w-4 h-4" />
    </div>

    <div class="mx-auto max-w-3xl w-[95vw] flex flex-col mb-4">
      <div class="available-capsule flex items-center bg-gradient-to-r from-green-950/40 to-green-900/40 backdrop-blur-lg border border-green-800/20 px-3 py-2 rounded-full mb-3 w-fit shadow-lg shadow-green-950/15 hover:shadow-green-950/25 transition-all duration-300">
        <div class="relative mr-2">
          <div class="w-3 h-3 bg-gradient-to-br from-green-400 to-green-600 rounded-full shadow-lg shadow-green-400/60 animate-pulse"></div>
          <div class="absolute inset-0 w-3 h-3 bg-green-400/30 rounded-full animate-ping"></div>
          <div class="absolute inset-0 w-3 h-3 bg-green-500/20 rounded-full animate-pulse"></div>
        </div>
        <span class="text-green-200/90 text-xs font-semibold tracking-wide">Available for work</span>
      </div>
      <div class="divider w-full bg-secondary h-px"></div>
    </div>
    <main
      class="mx-auto flex-grow max-h-[90vh] md:max-h-[70vh] max-w-3xl overflow-y-scroll pt-4 pb-2 grid w-[95vw]"
    >
      <div class="container">
        <Container />
      </div>
    </main>
    <Footer class="flex justify-center items-center py-4" />
  </body>
</html>

<style is:global>
  body {
    font-family: "DM Sans Variable", sans-serif;
  }

  @media (min-width: 768px) {
    .container {
      display: flex;
      flex-wrap: wrap;
    }
  }

  @media (max-width: 768px) {
    .container {
      flex-direction: column;
    }
  }

  @media only screen and (max-width: 480px) {
    * {
      font-size: 12px;
    }
  }

  .overflow-y-scroll::-webkit-scrollbar {
    width: 3px;
  }

  .overflow-y-scroll::-webkit-scrollbar-thumb {
    background-color: oklch(var(--s));
  }

  .overflow-y-scroll {
    scrollbar-width: 1px;
  }

  /* Custom animation for available for work capsule */
  @keyframes leaf-glow {
    0%, 100% {
      box-shadow: 0 0 8px rgba(34, 197, 94, 0.4), 0 0 16px rgba(34, 197, 94, 0.2);
    }
    50% {
      box-shadow: 0 0 12px rgba(34, 197, 94, 0.6), 0 0 24px rgba(34, 197, 94, 0.3);
    }
  }

  .available-capsule .animate-pulse {
    animation: leaf-glow 2s ease-in-out infinite;
  }

  /* Line clamp utility for blog descriptions */
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

</style>
